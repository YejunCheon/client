# API URL
NEXT_PUBLIC_API_URL=http://dealchain-env.eba-tpa3rca3.ap-northeast-2.elasticbeanstalk.com

# WebSocket URL
NEXT_PUBLIC_WS_URL=http://dealchain-env.eba-tpa3rca3.ap-northeast-2.elasticbeanstalk.com/ws

# 환경
NEXT_PUBLIC_ENV=production

# 본인인증 URL
